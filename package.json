{
  "name": "react-fullstack-portfolio",
  "version": "1.0.0",
  "description": "A MERN app that works both as a portfolio and a blog",
  "main": "index.js",
  "repository": "https://github.com/TheOmegaBlack/react-fullstack-portfolio",
  "author": "Sacha Morgese",
  "license": "MIT",
  "dependencies": {
    "cookie-session": "^2.0.0-beta.3",
    "express": "^4.16.3",
    "lodash": "^4.17.11",
    "mongoose": "^5.2.17",
    "passport": "^0.4.0",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth": "^2.0.0"
  },
  "engines": {
    "node": "^13.0.0",
    "npm": "^6.4.1",
    "yarn": "^1.9.4"
  },
  "scripts": {
    "start": "npm run build",
    "build": "run-s client:build server:build",
    "heroku-postbuild": "cd client && npm install && npm run build",
    "dev": "run-p client:dev server:dev",
    "server:dev": "nodemon index.js",
    "client:dev": "cd client && npm run dev",
    "lint": "eslint ./*.js client/src/**/*.js",
    "fix": "eslint ./*.js client/src/**/*.js --fix",
    "postinstall": "cd client && npm install",
    "flow": "flow status",
    "flow:install": "flow-typed install && flow-typed install -p ./client -l ../flow-typed",
    "test": "jest",
    "lint:all": "run-s fix flow"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:all"
    }
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.9.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-0": "^6.24.1",
    "eslint": "^6.4.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-flowtype": "^4.5.2",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.11.1",
    "flow-bin": "^0.109.0",
    "husky": "^3.0.8",
    "jest": "^24.9.0",
    "node-sass": "^4.12.0",
    "nodemon": "^1.18.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.14.3",
    "regenerator-runtime": "^0.12.1",
    "webpack": "^4.40.2",
    "webpack-node-externals": "^1.7.2"
  },
  "nodemonConfig": {
    "ignore": [
      "client/*"
    ],
    "delay": 2000
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true,
    "semi": true,
    "arrowParens": "always"
  },
  "resolutions": {
    "**/fsevents": "^1.2.9"
  }
}
